{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "module": "NodeNext",
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ],
}